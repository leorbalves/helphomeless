<% if @user == current_user %>
  <div class="profile-card d-flex justify-content-center">
    <div class="snip1336">
      <img class="card-banner" src="<%= @event.event_img %>" alt="sample87" />
      <figcaption>
        <img src="<%= current_user.profile_img %>" alt="profile-sample4" class="profile" />
        <div class="info">
          <h2><%= current_user.first_name %> <%=  current_user.last_name %></h2>
          <div class="friend-interaction">
            <p>Address: <%= current_user.address %></p>
          </div>
        </div>
      </figcaption>
    </div>
  </div>
<% else %>
  <div class="profile-card d-flex justify-content-center">
    <div class="snip1336">
      <img class="card-banner" src="<%= @event.event_img %>" alt="sample87" />
      <figcaption>
        <img src="<%= @user.profile_img %>" alt="profile-sample4" class="profile" />
        <div class="info">
          <h2><%= @user.first_name %> <%=  @user.last_name %></h2>
          <div class="friend-interaction">
            <a href="#" class="addfriend">Add Friend</a>
            <a href="#" class="chat">Chat</a>
          </div>
        </div>
      </figcaption>
    </div>
  </div>
<% end %>
