<div class="container">
  <div class="page-heading-form my-4">
   <h1 class="page-heading display-4">New Event</h1>
  </div>
  <div class="event-form-group">
    <%= simple_form_for @event do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
        <%= f.input :event_date, label: "Date", as: :date, input_html: { class: 'form-control', value: Date.today.to_s }, html5: true %>
        <%= f.input :photo, as: :file %>
        <%= f.submit 'Create', class: "btn btn-primary" %>
    <% end %>
  </div>

</div>
